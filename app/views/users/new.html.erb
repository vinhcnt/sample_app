<% provide :title, t("user.signup.title") %> 
<h1><%= t "user.signup.title"%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %> 
      <%= render "shared/error_messages" %>
      <%= f.label t "user.signup.name" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label t "user.signup.email" %>
      <%= f.email_field :email, class: "form-control" %> 
      <%= f.label t "user.signup.password" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("user.signup.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("user.signup.create_my_account"), class: "btn btn-primary" %> 
    <% end %>
  </div>
</div>
