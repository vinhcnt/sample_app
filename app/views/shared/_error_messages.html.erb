<% if @user.errors.any? %> 
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "shared.the_form_contains", error: @user.errors.count %> <%= pluralize @user.errors.count, t("shared.error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li> 
      <% end %>
    </ul>
  </div>  
<% end %>
